<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<main>
    <p></p>
    <div class="container">
        <div class="row align-items-start">
            <div class="col">
                <div class="card text-bg-dark p-3 mx-auto" style="width: 25rem; padding: 15px; border-radius: 10px;">
                    <%- include ('../partials/message') %>
                    <% if(data) { %>
                        <p class="fs-1 fw-bold"><%= data.username %>'s Stats</p>
                        <h1></h1>
                        <div class="row">
                            <% if(data.highscore) { %>
                                <p class="fs-4">Highscore: <%= data.highscore %></p>
                            <% } else { %>
                                <p class="fs-4">Play your first game!</p>
                            <% } %> 
                        </div>
                        <div class="row">
                            <% if(data.totalImages) { %>
                                <p class="fs-4">Total Images Seen: <%= data.totalImages %></p>
                            <% } %>
                        </div>
                    <% } else { %>
                        <div class="alert alert-danger" role="alert">
                            <h1>User data not found</h1>
                        </div>
                    <% } %>
                </div>
            </div>
            <div class="col">
                <div class="card text-bg-dark p-3 mx-auto" style="width:30rem">
                    <% if(data) { %>
                        <p class="fs-1 fw-bold" style="text-align: center;"><%= data.username %>'s Badges</p>
                        <h1></h1>
                        <% if(data.totalImages) { %>
                            <div class="d-grid gap-2">
                                <div class="row">
                                    <div class="card text-bg-dark mx-auto" style="width:auto;background-color: RGBA(0,0,0,var(--bs-bg-opacity,1))!important;">
                                        <img src="https://i.imgur.com/KXY0nmT.png" style="width:10rem;height:auto;margin-right:10px;">
                                        <p style="text-align: center;">Played your first game!</p>
                                    </div>
                                </div>

                                <% if(data.highscore > 10) { %>
                                    <div class="row">
                                        <div class="card text-bg-dark mx-auto" style="width:auto;background-color: RGBA(0,0,0,var(--bs-bg-opacity,1))!important;">
                                            <img src="https://thumbs.dreamstime.com/b/gold-shield-shape-icon-d-golden-emblem-sign-isolated-black-background-symbol-security-power-protection-badge-graphic-design-107569168.jpg" style="width:10rem;height:auto;margin-right:10px;">
                                            <p style="text-align: center;">Highscore of 10</p>
                                        </div>
                                    </div>
                                <% } %>
                                <% if(data.highscore > 50) { %>
                                    <div class="row">
                                        <div class="card text-bg-dark mx-auto" style="width:auto;background-color: RGBA(0,0,0,var(--bs-bg-opacity,1))!important;">
                                            <img src="https://thumbs.dreamstime.com/b/gold-shield-shape-icon-d-golden-emblem-sign-isolated-black-background-symbol-security-power-protection-badge-graphic-design-107569168.jpg" style="width:10rem;height:auto;margin-right:10px;">
                                            <p style="text-align: center;">Highscore of 50</p>
                                        </div>
                                    </div>
                                <% } %>
                                <% if(data.highscore > 75) { %>
                                    <div class="row">
                                        <div class="card text-bg-dark mx-auto" style="width:auto;background-color: RGBA(0,0,0,var(--bs-bg-opacity,1))!important;">
                                            <img src="https://thumbs.dreamstime.com/b/gold-shield-shape-icon-d-golden-emblem-sign-isolated-black-background-symbol-security-power-protection-badge-graphic-design-107569168.jpg" style="width:10rem;height:auto;margin-right:10px;">
                                            <p style="text-align: center;">Highscore of 75</p>
                                        </div>
                                    </div>
                                <% } %>
                                <% if(data.highscore > 100) { %>
                                    <div class="row">
                                        <div class="card text-bg-dark mx-auto" style="width:auto;background-color: RGBA(0,0,0,var(--bs-bg-opacity,1))!important;">
                                            <img src="https://thumbs.dreamstime.com/b/gold-shield-shape-icon-d-golden-emblem-sign-isolated-black-background-symbol-security-power-protection-badge-graphic-design-107569168.jpg" style="width:10rem;height:auto;margin-right:10px;">
                                            <p style="text-align: center;">Highscore of 100</p>
                                        </div>
                                    </div>
                                <% } %>

                                <% if(data.totalImages > 10) { %>
                                    <div class="row">
                                        <div class="card text-bg-dark mx-auto" style="width:auto;background-color: RGBA(0,0,0,var(--bs-bg-opacity,1))!important;">
                                            <img src="https://images.assetsdelivery.com/compings_v2/jelitanov/jelitanov2004/jelitanov200400020.jpg" style="width:10rem;height:auto;margin-right:10px;">
                                            <p style="text-align: center;">Seen 10 Images</p>
                                        </div>
                                    </div>
                                <% } %>
                                <% if(data.totalImages > 50) { %>
                                    <div class="row">
                                        <div class="card text-bg-dark mx-auto" style="width:auto;background-color: RGBA(0,0,0,var(--bs-bg-opacity,1))!important;">
                                            <img src="https://images.assetsdelivery.com/compings_v2/jelitanov/jelitanov2004/jelitanov200400020.jpg" style="width:10rem;height:auto;margin-right:10px;">
                                            <p style="text-align: center;">Seen 50 Images</p>
                                        </div>
                                    </div>
                                <% } %>
                                <% if(data.totalImages > 100) { %>
                                    <div class="row">
                                        <div class="card text-bg-dark mx-auto" style="width:auto;background-color: RGBA(0,0,0,var(--bs-bg-opacity,1))!important;">
                                            <img src="https://images.assetsdelivery.com/compings_v2/jelitanov/jelitanov2004/jelitanov200400020.jpg" style="width:10rem;height:auto;margin-right:10px;">
                                            <p style="text-align: center;">Seen 100 Images</p>
                                        </div>
                                    </div>
                                <% } %>
                                <% if(data.totalImages > 500) { %>
                                    <div class="row">
                                        <div class="card text-bg-dark mx-auto" style="width:auto;background-color: RGBA(0,0,0,var(--bs-bg-opacity,1))!important;">
                                            <img src="https://images.assetsdelivery.com/compings_v2/jelitanov/jelitanov2004/jelitanov200400020.jpg" style="width:10rem;height:auto;margin-right:10px;">
                                            <p style="text-align: center;">Seen 500 Images</p>
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                        <% } else { %>
                            <div class="row">
                                <p class="fs-4">Play your first game!</p>
                            </div>
                        <% } %>
                    <% } else { %>
                        <div class="alert alert-danger" role="alert">
                            <h1>User data not found</h1>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include ('../partials/footer') %>